{
  "version": 1,
  "routes": [
    {
      "path": "/api/*",
      "target": {
        "kind": "Compute",
        "name": "default"
      }
    },
    {
      "path": "/_health",
      "target": {
        "kind": "Compute",
        "name": "default"
      }
    },
    {
      "path": "/*",
      "target": {
        "kind": "Static"
      },
      "fallback": {
        "rewrite": "/index.html"
      }
    }
  ],
  "compute": {
    "default": {
      "runtime": "nodejs20.x",
      "handler": "src/index.js",
      "memory": 512,
      "environment": {
        "NODE_ENV": "production"
      },
      "healthCheck": {
        "path": "/_health",
        "initialDelaySeconds": 10,
        "periodSeconds": 5,
        "timeoutSeconds": 5,
        "successThreshold": 1,
        "failureThreshold": 3
      }
    }
  }
} 